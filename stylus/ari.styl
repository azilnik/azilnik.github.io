@import colors
logo-size = 75px
spacing = 48px
my-margin = spacing 0 spacing 0

html,body
	font-family serif
	flex-center()
	text-align center
	background-color tufte-background
	color tufte-foreground
	@media (prefers-color-scheme: dark)
		color tufte-background
		background-color tufte-foreground

.container
	max-width 53rem
	width 80%
	flex-center()
	flex-direction(column)

.icon
	flex-center()
	font-size 32px
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	min-width logo-size
	min-height logo-size
	color lighten(flare-color,50)
	border 5px solid lighten(flare-color,50);
	border-radius (logo-size/2)
	margin spacing

footer
	flex-center()
	flex-direction(column)
	margin my-margin
	margin-bottom 0px

.cta
	color (tufte-foreground*3)
	margin my-margin

.line
	width 30%
	height 2px
	background-color (tufte-foreground*5)

h1
	font-family serif
	font-weight 700
	color tufte-foreground
	margin my-margin

h2
	font-size 2.50rem
	font-weight 400
	margin my-margin
	// color tufte-foreground
	line-height 3rem

h3
	font-size 1.18rem
	font-weight 700
	margin my-margin
	line-height 2.52rem

p
	font-size 1.18rem
	line-height 2.2rem

a:link, a:visited, a:active
	color link-color
	text-decoration none
	@media (prefers-color-scheme: dark)
		color link-color-dark

a:hover
	color (link-color*1.2)
	text-decoration underline
	@media (prefers-color-scheme: dark)
		color link-color-dark

.title
	margin-top 0px
