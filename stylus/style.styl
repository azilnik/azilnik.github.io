@import flex
@import colors
@import "animate.css"
@import "normalize.css"
@import url('https://fonts.googleapis.com/css?family=Nunito:400,300,700')
serif = 'Nunito', sans-serif
logo-size = 75px

html,body
	font-family serif
	flex-center()
	text-align center
	background-color tufte-background
	color tufte-foreground
	

	
.container
	max-width 53rem
	width 80%
	flex-center()
	flex-direction(column)
	
.icon
	flex-center()
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	min-width logo-size
	min-height logo-size
	color flare-color
	border 5px solid flare-color;
	border-radius (logo-size/2)

footer
	flex-center()
	flex-direction(column)
	
.cta
	color (tufte-foreground*3)
	
.line
	margin 10px
	width 30%
	height 2px
	background-color (tufte-foreground*5)

h1
	font-family serif
	font-weight 700
	color flare-color
	
h2
	font-size 2.50rem
	font-weight 400
	
h3
	font-size 1.18rem
	font-weight 700
	color flare-color

p
	font-size 1.18rem
	
a:link, a:visited, a:active
	color link-color
	text-decoration none

a:hover
	color (link-color*1.2)
	text-decoration underline
